<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Follow_us">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_contacts"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_home"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/ic_home_black_24dp"
                android:tint="@android:color/black"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="0dp"
                android:text="Contact Us"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/whatsApp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/whatsapp"></ImageView>

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/facebook"></ImageView>

        <ImageView
            android:id="@+id/webSite"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/http"></ImageView>
        <ImageView
            android:id="@+id/twitter"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/twitter"></ImageView>
        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/linkedin"></ImageView>
        <ImageView
            android:id="@+id/phone"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="160dp"
            android:src="@drawable/phone"></ImageView>

    </RelativeLayout>
</RelativeLayout>