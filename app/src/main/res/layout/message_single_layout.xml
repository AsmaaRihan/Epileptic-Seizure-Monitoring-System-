<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/MessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ShowMessagesText"
        android:layout_alignEnd="@+id/ShowMessagesText"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="21dp"
        android:layout_marginEnd="5dp"
        android:text="TextView"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ShowMessagesText"
        android:layout_width="238dp"
        android:layout_height="51dp"
        android:background="@drawable/button_rounded"
        android:padding="10dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="#0E0E0E"
        android:textDirection="firstStrongRtl"
        android:visibility="visible"
        app:autoSizeTextType="none" />

    <ImageView
        android:id="@+id/ShowMessageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ImageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ShowMessageImage"
        android:layout_alignEnd="@+id/ShowMessageImage"
        android:layout_alignBottom="@+id/ShowMessageImage"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="-63dp"
        android:layout_marginBottom="-85dp"
        android:visibility="visible" />

</RelativeLayout>